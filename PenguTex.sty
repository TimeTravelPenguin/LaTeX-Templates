% Dark Mode
\newboolean{DARKMODE}
\setboolean{DARKMODE}{false}
\newcommand{\darkmode}{%
    \setboolean{DARKMODE}{true}
    \colorlet{underlineFontContour}{darkBg}%
    \colorlet{hrefColour}{Cyan}%
    \pagecolor{darkBg}%
    \color{white}%
}

