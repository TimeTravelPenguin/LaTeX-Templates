}

% Nicer underline
\renewcommand{\ULdepth}{1pt}
\contourlength{0.4pt}

\newcommand{\betterunderline}[1]{%
    \uline{\phantom{#1}}%
    \llap{\contour{underlineFontContour}{#1}}%
}

% Nicer href
\newcommand{\betterhref}[2]{\href{#1}{\textcolor{hrefColour}{\betterunderline{#2}}}}

